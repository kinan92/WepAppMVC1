@model WepAppMVC1.Models.People

<div class="row" id="@( "PeopleId" + Model.Id )">                                           
                                                                                                      
    <div class="col-md-6">
        <div class="row">
            <div class="col-md-4">
                @Model.Name                                                                          
            </div>
            <div class="col-md-4">
                @Model.PhoneNumbers
            </div>
            <div class="col-md-4">
                @Model.City
            </div>
        </div>
    </div>

    <div class="col-md-6">
        @Ajax.ActionLink("Remove", "AjaxRemovePerson", new { id = Model.Id },       // The Remove btn Ajax ActionLink
                     new AjaxOptions
                     {

                         InsertionMode = InsertionMode.Replace,
                         UpdateTargetId = $"PeopleId" + Model.Id

                     }, new { @class = "btn btn-danger" })

        @Ajax.ActionLink("Edit", "AjaxEditPerson", new { id = Model.Id },     // The edit btn Ajax ActionLink
                     new AjaxOptions
                     {

                         InsertionMode = InsertionMode.Replace,
                         UpdateTargetId = $"PeopleId" + Model.Id
                        
                     }, new { @class = "btn btn-warning" })


    </div>
</div>