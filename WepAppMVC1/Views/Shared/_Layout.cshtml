<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/sokoban.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#"><img id="detail-icon-img" src="https://cdn3.iconfinder.com/data/icons/humano2/128x128/apps/redhat-web-browser.png" alt="browser, redhat, web icon" width="32" height="32"></a>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li> @Html.ActionLink("CV","About","Home")</li>
                    <li> @Html.ActionLink("sokoban", "Sokoban", "Prodjects")</li>
                    <li> @Html.ActionLink("contact", "Contact", "Home")</li>
                    <li> @Html.ActionLink("celsius", "Celsius", "Home")</li>
                    <li> @Html.ActionLink("GuessingGame","GuessingGame", "Home")</li>
                    <li> @Html.ActionLink("PeopleReviews", "Index", "PeopleReviews")</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="navbar navbar-inverse navbar-fixed-bottom">
            <nav>

                <div class="container-fluid" style="text-align: center; color:white;">
                   <p>  </p>
                    <p>Kinan Abo karam &copy;  @DateTime.Now.ToString("yyyy-MM-dd").</p>
                    
                </div>
            </nav>
           
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>